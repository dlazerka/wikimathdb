<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">


	<display-name>WikiMathDB</display-name>


	<welcome-file-list>
		<welcome-file>.do</welcome-file>
	</welcome-file-list>


	<!-- Redefine default servlet to prevent directory listings -->
	<servlet>
	    <servlet-name>org.judgeos.default</servlet-name>
	    <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
	    <init-param>
	        <param-name>debug</param-name>
	        <param-value>0</param-value>
	    </init-param>
	    <init-param>
	        <param-name>listings</param-name>
	        <param-value>false</param-value>
	    </init-param>
	    <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
	    <servlet-name>org.judgeos.default</servlet-name>
	    <url-pattern>/</url-pattern>
	</servlet-mapping>


	<!-- JSP servlet -->
	<servlet>
		<servlet-name>jsp</servlet-name>
		<servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
		<init-param>
			<param-name>fork</param-name>
			<param-value>false</param-value>
		</init-param>
		<init-param>
			<param-name>xpoweredBy</param-name>
			<param-value>false</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>


	<!-- GWT Services -->
	<servlet>
		<servlet-name>GwtService</servlet-name>
		<servlet-class>org.wikimathdb.web.gwt.server.WikimathdbServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GwtService</servlet-name>
		<url-pattern>/gwt/WikimathService</url-pattern>
	</servlet-mapping>


	<!-- for initializing of DataSource through JNDI -->
<resource-ref>
	<description>
		Database datasource, defined in the META-INF/context.xml
	</description>
	<res-ref-name>
		jdbc/wikimathdb
	</res-ref-name>
	<res-type>
		javax.sql.DataSource
	</res-type>
	<res-auth>
		Container
	</res-auth>
</resource-ref>


	<!-- Extend session timeout -->
	<session-config>
	    <session-timeout>1200</session-timeout>
	</session-config>

</web-app>
